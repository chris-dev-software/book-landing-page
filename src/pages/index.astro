---
import Layout from '../layouts/Layout.astro';
import HeaderBracket from "../components/HeaderBracket.astro"
import PrimaryButton from '../components/buttons/PrimaryButton.astro';
import SecondaryButton from '../components/buttons/SecondaryButton.astro';
import ListItem from "../components/ListItem.astro"
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="w-full">
      <div class="max-w-7xl mx-auto h-[calc(100dvh-80px)] grid grid-cols-2 items-center gap-20">
        <div class="flex flex-col gap-8">
          <HeaderBracket content="Welcome to Pages"/>
          <h2 class="font-cardo text-6xl text-balance text-white font-bold">Books are uniquely portable magic</h2>
          <p class="text-paragraph max-w-lg leading-relaxed font-inter text-lg text-pretty">There are many variations of pas sages of Lorem Ipsum available, but the majority have suffered alteration in some form.</p>
          <div class="flex items-center gap-10">
            <PrimaryButton content="Order Today"/>
            <SecondaryButton content="Read Free Demo" />
          </div>
          <ul class="flex items-center gap-20">
            <ListItem title="Pages" content="586 pages" />
            <ListItem title="Length" content="10 hours" />
            <ListItem title="Rating" content="4.5/5 (305 ratings)" />
          </ul>
        </div>
        
        <div>
          <img  src="/book.png" alt="">
        </div>
      </div>
    </section>
  </main>
</Layout>
